def printlist():
    a = open(path, 'w')
    a.seek(0)
    a.truncate()
    time = strftime("%Y-%m-%d %H:%M:%S")
    n = 0
    for element in alist:
        a.write(str(n) + "\t" + time + "\t" + element)
        n = n+1

